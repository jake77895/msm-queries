<h1> Director #<%= @the_director.id %> details</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
    <dd><%= @the_director.name %></dd>

  <dt>Dob</dt>
    <dd><%= @the_director.dob %></dd>

  <dt>Bio</dt>
    <dd><%= @the_director.bio %></dd>

  <dt>Image</dt>
    <dd>
    <img src= <%= @the_director.image %> alt="headshot of director"> </dd>

  <dt>Created at</dt>
    <dd><%= @the_director.created_at %></dd>

  <dt>Updated at</dt>
    <dd><%= @the_director.updated_at %></dd>
</dl>

<hr>



<table border="1">

<% matching_movies = Movie.where({ :director_id => @the_director.id})%>

  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>


<% matching_movies.each do |a_movie|%>


  <tr>
    <td> <%= a_movie.id %> </td> <!-- ID -->
    <td> <img src = <%= a_movie.image %> width=250> </td> <!-- Image -->
    <td> <%= a_movie.title %></td> <!-- Title -->
    <td> <%= a_movie.year %> </td> <!-- Year -->
    <td> <%= @the_director.name %> </td> <!-- Director -->
    <td> <a href="/movies/<%=a_movie.id%>">Show details</a></td> <!-- -->

  </tr>


<% end %>




</table>

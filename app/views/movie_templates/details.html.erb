<h1> Movie #<%= @the_movie.id %> details</h1>

<a href="/movies">Go back</a>

<% matching_director = Director.find_by(id: @the_movie.director_id) %>

<hr>

<dl>
  <dt>Title</dt>
    <dd><%= @the_movie.title %></dd>

  <dt>Year</dt>
    <dd><%= @the_movie.year%></dd>

  <dt>Duration</dt>
    <dd><%= @the_movie.duration %></dd>

  <dt>Description</dt>
    <dd><%= @the_movie.description %></dd>

  <dt>Image</dt>
    <dd>
    <img src= <%= @the_movie.image %> alt="movie poster"> </dd>

  <dt>Director</dt>
    <dd><%= matching_director.name %></dd>
    

  <dt>Created at</dt>
    <dd><%= @the_movie.created_at %></dd>

  <dt>Updated at</dt>
    <dd><%= @the_movie.updated_at %></dd>
</dl>
